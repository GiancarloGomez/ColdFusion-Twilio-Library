# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = tab
insert_final_newline = false
tab_width = 4
trim_trailing_whitespace = true

[*.js]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = false
tab_width = 4
trim_trailing_whitespace = true

[*.yml]
indent_size = 2
indent_style = space

[*.{md,markdown}]
insert_final_newline = false
trim_trailing_whitespace = false

[web.config]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = false
tab_width = 4
trim_trailing_whitespace = true